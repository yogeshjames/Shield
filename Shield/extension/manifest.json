{
  "manifest_version": 3,
  "name": "Shield - AI Image Detector",
  "version": "1.2",
  "description": "Detect AI-Generated Images",
  
  "permissions": [
    "activeTab",
    "scripting",
    "storage"
  ],

  "action": {
    "default_popup": "popup.html",
    "default_title": "Shield - AI Image Detector"
  },

  "background": {
    "service_worker": "background.js"
  },
  
  "host_permissions": [
    "<all_urls>"
  ],

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["contentScript.js"],
      "run_at": "document_idle",
      "all_frames": false
    }
  ]
}